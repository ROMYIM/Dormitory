<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.john_yim.dormitory">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.student.StudentMainActivity" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.WelcomeBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.student.StudentRegisterActivity"
            android:theme="@style/AppTheme.WelcomeBackground" />
        <activity android:name=".activity.ListActivity" />
        <activity android:name=".activity.InfoDetailActivity" />
        <activity android:name=".activity.student.StudentPayBillActivity" />
        <activity android:name=".activity.student.StudentRepairActivity" />
        <activity android:name=".activity.dorAdmin.DorAdminMainActivity" />
        <activity android:name=".activity.dorAdmin.DorAdminRegisterActivity" />
        <activity android:name=".activity.dorAdmin.DorAdminNoticeActivity" />
        <activity android:name=".activity.dorAdmin.DorAdminViolationActivity" />
        <activity android:name=".activity.adminstrator.AdminRegisterActivity"></activity>
    </application>

</manifest>