<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.john_yim.dormitory.activity.student.StudentPayBillActivity">

    <RadioGroup
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/billType">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水费"
            android:textSize="30dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/waterType"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="30dp"
            android:text="电费"
            android:id="@+id/electricType"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/billMoneyLayout"
        android:layout_marginTop="52dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/billType"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="金额："
            android:textColor="@color/colorBlack"
            android:textSize="25dp" />

        <EditText
            android:layout_width="110dp"
            android:textSize="30dp"
            android:layout_height="50dp"
            android:id="@+id/billMoney"
            android:background="@drawable/editext_bg"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/billMoneyLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="确认"
        android:id="@+id/payBillBtn"
        android:textSize="30dp"/>

</RelativeLayout>
