<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/postOwner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="楼主"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:gravity="right|center"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/postOwner"
        android:layout_height="30dp"
        android:id="@+id/postSendDate"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:text="2014-09-01"/>

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/postOwner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/forumTitle"
        android:background="@color/colorBottomBar"
        android:textColor="@color/colorBlack"
        android:text="标题"
        android:textSize="20dp"
        android:gravity="center|left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/forumTitle"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="回复：0"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/replyCount"
            android:textSize="15dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBottomBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="赞：0"
            android:textSize="15dp"
            android:gravity="center"
            android:id="@+id/goodCount"/>

    </LinearLayout>

</RelativeLayout>